@page "/"

@inject DialogService DialogService
@inject NotificationService NotificationService

@attribute [Authorize]
<PageTitle>Home</PageTitle>
<AuthorizeView Roles="Admin">
    <Authorized>

        <div class="container">
            <div class="card">
                <div class="card-header">
                    <img src="Logo_.png" alt="Logo" class="img-logo">
                    <h2>Sublimation - Menú Principal</h2>
                </div>
                <div class="card-body">
                    <div class="row justify-content-around">
                        <div class="col-md-3 mb-4">
                            <a href="/IndexVenta" class="text-decoration-none text-dark">
                                <div class="menu-item text-center">
                                    <img src="Icons/Venta.png" alt="Venta" class="icon">
                                    <p>Ventas</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3 mb-4">
                            <a href="/IndexCliente" class="text-decoration-none text-dark">
                                <div class="menu-item text-center">
                                    <img src="Icons/Clientes.png" alt="Clientes" class="icon">
                                    <p>Clientes</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3 mb-4">
                            <a href="/IndexServicio" class="text-decoration-none text-dark">
                                <div class="menu-item text-center">
                                    <img src="Icons/Servicio.png" alt="Servicios" class="icon">
                                    <p>Servicios</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3 mb-4">
                            <a href="/IndexUsuario" class="text-decoration-none text-dark">
                                <div class="menu-item text-center">
                                    <img src="Icons/Empleado.png" alt="Usuarios" class="icon">
                                    <p>Usuarios</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3 mb-4">
                            <a href="/IndexCompra" class="text-decoration-none text-dark">
                                <div class="menu-item text-center">
                                    <img src="Icons/Compra.png" alt="Compras" class="icon">
                                    <p>Compras</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3 mb-4">
                            <a href="/IndexReclamo" class="text-decoration-none text-dark">
                                <div class="menu-item text-center">
                                    <img src="Icons/Reclamos.png" alt="Reclamos" class="icon">
                                    <p>Reclamos</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3 mb-4">
                            <a href="/IndexInsumo" class="text-decoration-none text-dark">
                                <div class="menu-item text-center">
                                    <img src="Icons/Inventario.png" alt="Insumos" class="icon">
                                    <p>Insumos</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3 mb-4">
                            <a href="/IndexSuplidor" class="text-decoration-none text-dark">
                                <div class="menu-item text-center">
                                    <img src="Icons/Suplidor.png" alt="Suplidores" class="icon">
                                    <p>Suplidores</p>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="card mx-auto shadow-lg" style="max-width:1000px">
            <div class="card-header d-flex align-items-center justify-content-center">
                <img src="Logo_.png" class="img-logo" />
                <h2>Sublimation - Menú Principal</h2>
            </div>
            <div class="card-body" style="background-color: #ffff; background-size: cover;">
                <div class="row justify-content-center">
                    <div class="col-md-4 text-center">
                        <a href="/CreateVentaCliente">
                            <div class="menu-item">
                                <img src="Icons/Compra.png" class="icon" />
                                <p>Comprar</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4 text-center">
                        <a href="/IndexVentaCliente">
                            <div class="menu-item">
                                <img src="Icons/Venta.png" class="icon" />
                                <p>Historial de Compras</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4 text-center mb-4">
                        <a href="/IndexReclamoCliente">
                            <div class="menu-item">
                                <img src="Icons/Reclamos.png" class="icon" />
                                <p>Hacer Reclamo</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>


<style>
    .menu-item {
        border: 1px solid #ced4da;
        border-radius: 8px;
        padding: 10px;
        transition: background-color 0.3s ease, transform 0.2s ease;
        background-color: rgba(255, 255, 255, 0.8);
    }

        .menu-item:hover {
            background-color: #f8f9fa;
            transform: scale(0.95);
        }

        .menu-item:active {
            transform: scale(1);
        }

        .menu-item img {
            width: 50px;
            height: 50px;
            margin-bottom: 10px;
        }

        .menu-item p {
            margin: 0;
        }

    .img-logo {
        max-width: 50px;
        height: auto;
    }

    a, a:hover, a:focus, a:active {
        text-decoration: none;
        color: #001B97;
    }

    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    .container {
        max-width: 800px;
        margin: 20px auto;
    }

    .card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
    }

    .card-header {
        background-color: #E5E5E5;
        border-radius: 20px 20px 0 0;
        color: #ffffff;
        text-align: center;
        padding: 20px 0;
    }

    .card-body {
        padding: 30px 20px;
    }

    .menu-item {
        border: 1px solid #dee2e6;
        border-radius: 20px;
        padding: 20px;
        transition: all 0.3s ease;
    }

        .menu-item:hover {
            background-color: #f8f9fa;
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .menu-item img {
            max-width: 60px;
            margin-bottom: 10px;
        }

        .menu-item p {
            font-size: 18px;
            margin: 0;
        }
</style>